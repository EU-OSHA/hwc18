/**
 * Implements hook_block_save().
 */
function hwc_priority_areas_block_save($delta = '', $edit = array()) {
  // We need to save settings from the configuration form.
  switch ($delta) {
    case 'hwc_pa_links_and_info':
      variable_set('hwc_pa_links_and_info_text', $edit['hwc_pa_links_and_info_text']);
      break;
    case 'hwc_pa_highlights':
      variable_set('hwc_pa_highlights_text', $edit['hwc_pa_highlights_text']);
      break;
    case 'hwc_pa_practical_tools':
      variable_set('hwc_pa_practical_tools_text', $edit['hwc_pa_practical_tools_text']);
      break;
    case 'hwc_pa_case_studies':
      variable_set('hwc_pa_case_studies_text', $edit['hwc_pa_case_studies_text']);
      break;
    case 'hwc_pa_publications':
      variable_set('hwc_pa_publications_text', $edit['hwc_pa_publications_text']);
      break;
    case 'hwc_pa_etool':
      variable_set('hwc_pa_etool_text', $edit['hwc_pa_etool_text']);
      break;
    case 'hwc_pa_related_links':
      variable_set('hwc_pa_related_links_text', $edit['hwc_pa_related_links_text']);
      break;
  }
}

/**
 * Implements hook_block_view().
 */
function hwc_priority_areas_block_view($delta = '') {
  $block = array();
  $block['content'] = '';
  $relevant_for = arg(2);
  if ($delta == 'hwc_pa_links_and_info') {
    $recommended = variable_get('hwc_pa_links_and_info_text', 'Recommended resources for you');
    $block['content'] = theme('priority_areas_links_and_info', array(
        'text' => NULL,
        'link' => NULL,
        'recommended' => $recommended,
      )
    );
  }

  if ($delta == 'hwc_pa_highlights') {
    $block['title'] = t('Highlights');
    $block['content'] = variable_get('hwc_pa_highlights_text', '');
    $block['content'] .= hwc_priority_areas_get_highlights($relevant_for, 2);
  }

  if ($delta == 'hwc_pa_practical_tools') {
    $block['title'] = t('Tools and Guidance');
    $block['content'] = variable_get('hwc_pa_practical_tools_text', '');
    $block['content'] .= hwc_priority_areas_get_practical_tools($relevant_for, 1);
    $link = url('practical-tools', ['query' => array('relevant_for[' . $relevant_for . ']' => $relevant_for)]);
    $block['content'] .= theme('priority_areas_show_more_button', ['text' => t('See More tools'), 'link' => $link]);
  }

  if ($delta == 'hwc_pa_case_studies') {
    $block['title'] = t('Case studies');
    $block['content'] = variable_get('hwc_pa_case_studies_text', '');
    $block['content'] .= hwc_priority_areas_get_case_studies($relevant_for, 1);
    $link = url('case-studies', ['query' => array('relevant_for[' . $relevant_for . ']' => $relevant_for)]);
    $block['content'] .= theme('priority_areas_show_more_button', ['text' => t('See More Case Studies'), 'link' => $link]);
  }

  if ($delta == 'hwc_pa_publications') {
    $block['title'] = t('Publications');
    $block['content'] = variable_get('hwc_pa_publications_text', '');
    $block['content'] .= hwc_priority_areas_get_publications($relevant_for, 1);
    $link = url('publications', ['query' => array('relevant_for[' . $relevant_for . ']' => $relevant_for)]);
    $block['content'] .= theme('priority_areas_show_more_button', ['text' => t('See More Publications'), 'link' => $link]);
  }

  if ($delta == 'hwc_pa_etool') {
    $block['title'] = t('Dangerous Substances e-tool');
    $block['content'] = variable_get('hwc_pa_etool_text', '');
    $link = url('gpa_section_in_campaign_website', ['query' => array('relevant_for[' . $relevant_for . ']' => $relevant_for)]);
    $block['content'] .= theme('priority_areas_show_more_button', ['text' => t('GPA section in campaign website'), 'link' => $link]);
  }

  if ($delta == 'hwc_pa_related_links') {
    $block['title'] = t('Related links');
    $block['content'] .= hwc_priority_areas_get_related_links($relevant_for, 3);
  }
  return $block;
}

