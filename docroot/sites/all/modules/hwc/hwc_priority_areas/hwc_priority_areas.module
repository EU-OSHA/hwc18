      );
      break;
    case 'hwc_pa_publications':
      $form['hwc_pa_publications_text'] = array(
        '#type' => 'textarea',
        '#title' => 'Introductory text',
        '#size' => 60,
        '#default_value' => variable_get('hwc_pa_publications_text', ''),
      );
      break;
    case 'hwc_pa_etool':
      $form['hwc_pa_etool_text'] = array(
        '#type' => 'textarea',
        '#title' => 'Introductory text',
